{
  "name": "verbfy-backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --build --verbose",
    "build:prod": "tsc --build --verbose && npm run optimize",
    "optimize": "terser dist/index.js -o dist/index.js --compress --mangle",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/index.ts",
    "start": "node --max-old-space-size=768 --optimize-for-size dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop verbfy-backend",
    "restart:pm2": "pm2 restart verbfy-backend",
    "logs:pm2": "pm2 logs verbfy-backend",
    "monitor:pm2": "pm2 monit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "validate-env": "node scripts/validate-env.js",
    "generate-secrets": "node scripts/validate-env.js generate-secrets",
    "pre-deploy": "npm run validate-env && npm run build:prod",
    "security-check": "npm audit && npm run validate-env",
    "health-check": "node -e \"require('http').get('http://localhost:5000/api/health', res => process.exit(res.statusCode === 200 ? 0 : 1))\"",
    "monitor:memory": "node scripts/monitor-memory.js",
    "performance:test": "npm run health-check && npm run monitor:memory"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.620.0",
    "@aws-sdk/s3-request-presigner": "^3.620.0",
    "@sentry/node": "^7.120.4",
    "@sentry/profiling-node": "^10.17.0",
    "@sentry/tracing": "^7.120.4",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.13.1",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "openid-client": "^5.6.5",
    "pino": "^9.12.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.2",
    "socket.io": "^4.7.5",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "terser": "^5.31.0",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
